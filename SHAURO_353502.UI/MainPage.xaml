<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SHAURO_353502.UI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="hotel.png"
                HeightRequest="285"
                Aspect="AspectFit"
               />

            <Label
                Text="Hotel Rooms Manager"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="UI to manage rooms and offered services"
                Style="{StaticResource SubHeadline}" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
